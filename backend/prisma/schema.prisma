generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Image {
  id         Int         @id @default(autoincrement())
  title      String
  url        String
  width      Int
  height     Int
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  characters Character[]
  sessions   Session[]
}

model Character {
  id         Int      @id @default(autoincrement())
  imageId    Int
  name       String
  x_pct      Float
  y_pct      Float
  radius_pct Float
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  image      Image    @relation(fields: [imageId], references: [id], onDelete: Cascade)

  @@unique([imageId, name])
}

model Session {
  id              Int       @id @default(autoincrement())
  imageId         Int
  startedAt       DateTime  @default(now())
  finishedAt      DateTime?
  foundCharacters Json      @default("[]")
  anonymousId     String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  scores          Score[]
  image           Image     @relation(fields: [imageId], references: [id], onDelete: Cascade)
}

model Score {
  id          Int      @id @default(autoincrement())
  sessionId   Int
  playerName  String
  timeSeconds Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  session     Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}
